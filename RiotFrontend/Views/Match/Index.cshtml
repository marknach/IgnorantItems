<div class="jumbotron">
    <h1>Ignorant Items</h1>
    <p class="lead">View all of the pro's champion builds, items, and masteries.</p>
</div>
<div class="matchInfoContainer">
    <div class="row">
        <div class="matchChampionImage">
        @{  var championName = ViewBag.match.Champion.Image.Full; }
            <div class="col-xs-1">
                <img src="http://ddragon.leagueoflegends.com/cdn/5.24.2/img/champion/@championName" width="60" height="60"/>
            </div>
            @if (ViewBag.match.Won)
            {
                <div class="col-xs-4">
                    <h2>@ViewBag.match.ProName: Win</h2>
                </div>
            }
            else
            {
                <div class="col-xs-4">
                    <h2>@ViewBag.match.ProName: Loss</h2>
                </div>
            }
        </div>
    </div>

    <h3>Match Info</h3>
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-1">Champion:</div>
        <div class="col-xs-2">@ViewBag.match.Champion.Name</div>
    </div>

    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-1">Score:</div>
        @{ 
            var kills = @ViewBag.match.Kills;
            var deaths = @ViewBag.match.Deaths;
            var assists = @ViewBag.match.Assists;
        }
        <div class="col-xs-2">@kills/@deaths/@assists</div>
    </div>

    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-1">Duration:</div>
        @{
            var duration = TimeSpan.FromSeconds(ViewBag.match.MatchDuration);
            var hours = (int) duration.Hours;
            var minutes = string.Format("{0:d2}", (int)duration.Minutes);
            var seconds = string.Format("{0:d2}", (int)duration.Seconds);
            if (hours > 0) {
                <div class="col-xs-2">@hours:@minutes:@seconds</div>
            }
            else {
                <div class="col-xs-2">@minutes:@seconds</div>
            }
        }
    </div>

    <h3>Runes</h3>
    @foreach (var rune in ViewBag.match.Runes)
    {
        <div class="row">
            <div class="runeRow">
                <div class="col-xs-1"></div>
                <div class="col-xs-1">
                    <img src="http://ddragon.leagueoflegends.com/cdn/5.24.2/img/rune/@(rune.Data.Image.Full)" width="35" height="35" />
                    <span>x@(rune.Rank)</span>
                </div>
                <div class="col-xs-5">
                    <div class="runeDescription">
                        <span>@rune.Data.SanitizedDescription</span>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    }

    <h3>Masteries</h3>
    @foreach (var mastery in ViewBag.match.Masteries)
    {
        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-3">@mastery.Data.Name</div>
            <div class="col-xs-1">Ranks: @mastery.Rank</div>
        </div>
    }

    <h3>Items</h3>
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-8">
            @foreach (var item in ViewBag.match.ItemsBought)
            {
                <span class="imageItem">
                    <img src="http://ddragon.leagueoflegends.com/cdn/5.24.2/img/item/@(item.Image.Full)" width="40" height="40" />
                    <span class="glyphicon glyphicon-arrow-right"></span>
                </span>
            }
        </div>
    </div>
</div>