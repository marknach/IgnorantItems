@{
    var duration = TimeSpan.FromSeconds(ViewBag.match.MatchDuration);
    var hours = (int) duration.Hours;
    var minutes = $"{(int) duration.Minutes:d2}";
    var seconds = $"{(int) duration.Seconds:d2}";
}

<script type='text/javascript'>
    window.backendParams = {
        matchId: @ViewBag.MatchId,
        hours: hours,
        minutes: minutes,
        seconds: seconds
    };
</script>

<div class="ng-cloak" id="baseContainer" ng-app="IgnorantItems">
    <div id="homeContainer" ng-controller="matchController">
        <div class="row">
            <div class="matchChampionImage">
                <div class="col-xs-2">
                    <img ng-src="http://ddragon.leagueoflegends.com/cdn/5.24.2/img/champion/{{imageName}}" width="60" height="60" />
                </div>
                <div class="col-xs-4">
                    <h2>{{title}}</h2>
                </div>
            </div>
        </div>
        <h3>Match Info</h3>
        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-1">Champion:</div>
            <div class="col-xs-2">{{match.Champion.Name}}</div>
        </div>

        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-1">Score:</div>
            <div class="col-xs-2">{{kills}}/{{deaths}}/{{assists}}</div>
        </div>

        <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-1">Duration:</div>
            <div class="col-xs-2">{{durationText}}</div>
        </div>

        <h3>Runes</h3>
        @foreach (var rune in ViewBag.match.Runes)
        {
            <div class="row">
                <div class="runeRow">
                    <div class="col-xs-1"></div>
                    <div class="col-xs-1">
                        <img src="http://ddragon.leagueoflegends.com/cdn/5.24.2/img/rune/@(rune.Data.Image.Full)" width="35" height="35" />
                        <span>x@(rune.Rank)</span>
                    </div>
                    <div class="col-xs-5">
                        <div class="runeDescription">
                            <span>@rune.Data.SanitizedDescription</span>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/Share/angular.min.js")
    @Scripts.Render("~/Scripts/Apps/matchController.js")
}